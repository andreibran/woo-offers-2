{
    "name": "woo-offers/woo-offers",
    "description": "Advanced upsell and cross-sell plugin for WooCommerce with modern UI, multiple offer types, and comprehensive analytics.",
    "type": "wordpress-plugin",
    "keywords": [
        "wordpress",
        "woocommerce",
        "upsell",
        "cross-sell",
        "offers",
        "discount",
        "quantity-break",
        "bogo",
        "bundle"
    ],
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Woo Offers Team",
            "email": "hello@wooofers.com",
            "homepage": "https://wooofers.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "composer/installers": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6",
        "wp-coding-standards/wpcs": "^2.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7"
    },
    "autoload": {
        "psr-4": {
            "WooOffers\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WooOffers\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs",
        "cbf": "phpcbf",
        "build": "npm run build"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
